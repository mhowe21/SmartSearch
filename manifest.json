{
  "manifest_version": 2,

  "name": "AddSmartSearch",
  "description": "AddApp",
  "version": "0.0.4",

  "page_action": {
   
   "default_popup": "popup.html",
   "request_scripts": ["background.js"],
   "default_icon": 
   {
      "16": "images/Gengar16.png",
      "32": "images/Gengar32.png",
      "48": "images/Gengar64.png",
      "128": "images/Gengar128.png"
    },
    "icons": {
      "16": "images/Gengar16.png",
      "32": "images/Gengar32.png",
      "48": "images/Gengar64.png",
      "128": "images/Gengar128.png"
    }
  },

  "options_page": "options.html",
     
 "permissions": ["activeTab", "https://siteadmin.instructure.com/", "storage", "declarativeContent", "tabs"],
   "content_scripts": [{
       "js": ["background.js"],
       "matches": [ "https://siteadmin.instructure.com/"]
   }],
  "background": {
      "scripts": ["background.js"],
      "persistent": false,
      "matches": ["https://siteadmin.instructure.com/"]
  }
}

  
